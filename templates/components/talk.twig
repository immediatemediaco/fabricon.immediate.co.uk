<div class="talk talk--track-{{track}}">
    {{ talk.speakers|join(', ') }}
    <h5 class="talk__title">{{- talk.title -}}</h5>
    <div class="talk__description">
        {% if talk.description %}
            <p>{{- talk.description -}}</p>
        {% endif %}
        {% if talk.moderator %}
            <p>Moderated by {{ talk.moderator }}</p>
        {% endif %}
    </div>
    {% if talk.slackChannelUrl and talk.slackChannel %}
        <a href="{{ talk.slackChannelUrl }}" class="talk__link" target="_blank"><i
                    class="talk__icon icon icon--slack"></i>{{ talk.slackChannel }}</a>
    {% elseif talk.slackChannel %}
        <p class="talk__link"><i class="talk__icon icon icon--slack"></i>{{ talk.slackChannel }}</p>
    {% endif %}
    {% if talk.teamsUrl %}
        <a href="{{ talk.teamsUrl }}" class="talk__link" target="_blank"><i class="talk__icon icon icon--teams"></i>Join on Microsoft
            Teams</a>
    {% endif %}
    {% if talk.slidoUrl %}
        <a href="{{ talk.slidoUrl }}" class="talk__link" target="_blank"><i
                    class="talk__icon icon icon--slido"></i>{{ talk.slidoText ?: talk.slidoUrl }}</a>
    {% endif %}
</div>
